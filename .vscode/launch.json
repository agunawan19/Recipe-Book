  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Firefox debug against localhost:4200",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome debug against localhost:4200",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "trace": true,
      "runtimeArgs": [
        "--new-window",
        "--user-data-dir=C:/Users/agunawan.BSA/Documents",
        "--remote-debugging-port=9222"
      ],
      "sourceMaps": true
    }
  ]
}
